{% extends 'base.html.twig' %}

{% block title %} Регистрация {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
{% endblock %}

{% block body %}
    {{ title|date_modify("+10 day")|date("d/m/Y") }}
    <br>
    {{ app.request.attributes.get('_route') }}
    <br>
    {{ price|ago(2, ',', '.') }}

    <div class="container">
        <h3 class="text-center">Регистрация</h3>
        {{ form_start(form) }}

        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}

        <p>Password {{ form_widget(form.plainPassword.first, {'attr':{ 'class':'form-control'}}) }}</p>
        <p>Password {{ form_widget(form.plainPassword.second, {'attr':{ 'class':'form-control'}}) }} </p>

        {{ form_errors(form.email) }}
        {{ form_errors(form.plainPassword.first) }}
        <button type="submit" class="btn btn-success" formnovalidate>Зарегистрироваться</button>
        {{ form_end(form) }}

    </div>

    <br>
    <a href="{{ path('app_login') }}">login</a>
{% endblock %}